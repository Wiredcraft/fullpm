{
  "manifest_version": 2,
  "name": "PMHub extension",
  "description": "PMHub extension",
  "version": "0.00001",
  "background" : {
    "scripts" : [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://github.com/*/*"
      ],
      "exclude_matches": [
        "*://github.com/showcases/*",
        "*://github.com/trending/*",
        "*://github.com/integrations/*",
        "*://github.com/blog/*",
        "*://github.com/business/*",
        "*://github.com/open-source/*",
        "*://github.com/site/*",
        "*://github.com/security/*",
        "*://github.com/contact/*",
        "*://github.com/about/*",
        "*://github.com/explore/*",
        "*://github.com/settings/*",
        "*://github.com/new/*",
        "*://github.com/notifications/*",
        "*://github.com/*/*/notifications",
        "*://github.com/issues/*",
        "*://github.com/pulls/*",
        "*://github.com/orgs/*"
      ],
      "js": [
        "script.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "frame.html"
  ]
}
